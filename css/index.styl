@import "normalize.css"
@import "fonts.css"

// Breakpoints mixin
breakpoint(point, value = 0)

  if point == "mobile"
    @media (min-width: 320px)
    	{block}

  else if point == "mobile-landscape"
    @media (min-width: 568px)
    	{block}

  else if point == "tablet"
    @media (min-width: 768px)
    	{block}

  else if point == "desktop"
    @media (min-width: 992px)
    	{block}

  else if point == "retina-only"
    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
    	{block}

  else
    @media (min-width: value)
    	{block}

@-webkit-keyframes fadeIn {
    from { opacity: 0; }
      to { opacity: 1; }
}

@keyframes fadeIn {
    from { opacity: 0; }
      to { opacity: 1; }
}

.auth0-lock-hide
  display: none;

.auth0-lock-overlay
  +breakpoint("desktop")
    background: rgba(34,34,40, .94)
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    z-index: -1;
    opacity: 0;
    background: radial-gradient(lighten(#222228, 15%), #111118); /* Standard syntax */
    -webkit-transition: opacity .4s ease-in 0s;

.auth0-lock-form
  display: block;
  -webkit-animation: fadeIn .7s;
  animation: fadeIn .7s;

.auth0-lock-form.auth0-lock-hide
  display: none;


.auth0-lock
  font-family: "Avenir", sans-serif;
  visibility: hidden;
  text-rendering: optimizeLegibility;

  &.open
    visibility: visible;

  a
    text-decoration: none;

  input:focus
    outline: none;

  +breakpoint("desktop")
    width: 300px;
    border-radius: 5px;
    position: fixed;
    left: 50%;
    top: 200px;
    margin-left: -150px;

  .auth0-lock-widget
    +breakpoint("desktop")
      opacity: 0;
      border-radius: 5px;
      box-shadow: 0 0 0 transparent;
      -webkit-transition: transform 1s, opacity 1.5s;
      -webkit-transform: translateY(80%) scale(.8);
      -webkit-transition-timing-function: cubic-bezier(.3, 0, 0, 1.4);
      -webkit-transition-delay: .3s;


  &.open
    .auth0-lock-overlay
      opacity: .9;
    .auth0-lock-widget
      opacity: 1;
      box-shadow: 0 0 40px 4px #111118;
      -webkit-transform: translateY(0%) scale(1);
      -webkit-transition-delay: 0;


  .auth0-lock-header
    text-align: center;
    padding: 14px;
    background: #fff;
    color: #333;
    position: relative;
    overflow: hidden;

    +breakpoint(mobile-landscape)
      border-top-right-radius: 5px;
      border-top-left-radius: 5px;

    .auth0-lock-close
      background: white;
      border-radius: 100px;
      height: 22px;
      width: 22px;
      background: white;
      position: absolute;
      top: 14px;
      right: 14px;
      box-shadow: 0 1px 1px rgba(0,0,0,.4);
      color: #333;
      z-index: 100;
      &:before
        content: "e";
        font-size: 10px;
        position: relative;
        top: .4px;

  .auth0-lock-header-welcome
    font-size: 22px;
    overflow: hidden;
    position: relative;

    .auth0-lock-header-logo
      width: 60px;
      height: 60px;
      background: url('../img/badge.svg') center no-repeat
      background-size: 100% 100%;
      margin: auto auto 10px auto;

  .auth0-lock-header:before
    background:  url('../img/badge.svg') center no-repeat
    background-size: 100%;
    position: absolute
    z-index: 0
    top: 0;
    bottom: 0
    content: " ";
    left: 0;
    right: 0;
    -webkit-filter: grayscale(1) blur(50px);
    opacity: .7
    // display: none;

  .auth0-lock-content
    padding: 30px 40px;
    background: white;
    max-width: 240px;
    margin: auto;

  .auth0-lock-tabs
    border: 1px solid #5C666F;
    padding: 0;
    margin: 0 0 30px 0;
    border-radius: 3px;
    text-transform: uppercase;
    font-size: 11px;
    letter-spacing: .5px;
    overflow: hidden;
    li
      width: 50%;
      display: block
      list-style: none;
      float: left;
      padding: 0;
      margin: 0;
      text-align: center;

      &.auth0-lock-tabs-current
        background-color: #5C666F;
        a
          color white

      a
        padding: 6px 10px;
        display: block;
        text-decoration: none;
        color: #5C666F;


  .auth0-lock-input-wrap
    border-radius: 3px;
    margin-bottom: 14px;
    border: 1px solid #f1f1f1;
    position: relative;
    background: #f1f1f1;
    overflow: hidden;

    i:before
      color: #888;
      position: absolute
      font-size: 12px;
      top: 17px;
      left: 15px;

    &.auth0-lock-input-username
      i:before
        content: "b"

    &.auth0-lock-input-password
      i:before
        content: "c"


    .auth0-lock-input
      border: 0;
      padding: 12px 14px;
      margin-left: 40px;
      right: 0;
      height: 20px;
      border-left: 1px solid #eee;
      font-size: 13px;
      right: 0px;
      width: 169px;
      +breakpoint("mobile-landscape")
        width: 149px;

    &:last-child
      margin-bottom: 0;

  .auth0-lock-terms
    text-align: center;
    margin-top: 20px;
    display: block;
    font-size: 12px;
    color: #666;
    line-height: 24px;
    a
      color: #000;

  .auth0-lock-submit
    background: #40DF7D;
    background: #EA5323;
    border: 0;
    padding: 14px;
    display: block;
    width: 100%;
    position: fixed;
    bottom: 0;
    &:hover
      background: darken(#EA5323, 20%)

    +breakpoint("mobile-landscape")
      position: static;
      border-bottom-right-radius: 5px;
      border-bottom-left-radius: 5px;

    i
      border: 2.5px solid white;
      width: 40px;
      height: 40px;
      display: block;
      margin: auto;
      border-radius: 100px;
      &:before
        content: "p"
        color: white
        top: 9.5px;
        position: relative;
        font-size: 20px
        left: 2px;


  .auth0-lock-forgot-link
    font-size 12px;
    display: block
    text-align: center;
    margin: 30px 0 0 0;
    color: #5C666F;

  .auth0-lock-badge
    display: block;
    text-align: center;
    margin-top: 20px;
    font-size: 20px;
    position: relative;
    z-index: -1;
    -webkit-transition: transform 1.2s ease 1.8s, opacity 1.2s ease 1.8s;
    -webkit-transform: translateY(-200%) scale(.8);
    opacity: 0;

    &:before
      content: "f"
      color: rgba(255,255,255,.4)

  &.open
    .auth0-lock-badge
      -webkit-transform: translateY(0%)  scale(1);
      opacity: 1;
      -webkit-transition-delay: 0;
