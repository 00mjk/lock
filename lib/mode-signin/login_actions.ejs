<div class="a0-create-account a0-buttons-actions">
  <% if (showSignupAction) { %>
  <a href="<%= locals.signupLink || 'javascript: {}' %>"
    class="a0-sign-up a0-btn-small">
    <%= i18n.t('signin:signupText') %>
  </a>
  <% } %>
  <% if (showSignupAction && showResetAction) { %>
  <span class="a0-divider"></span>
  <% } %>
  <% if (showResetAction) { %>
  <a href="<%= locals.forgotLink || 'javascript: {}' %>"
    class="a0-forgot-pass  a0-btn-small"><%= i18n.t('signin:forgotText') %></a>
  <% } %>
</div>
