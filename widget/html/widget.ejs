<div id="a0-onestep" class="a0-panel a0-onestep">
    <% if (!locals.embedded) { %>
    <div class="a0-header a0-top-header">
        <div class="a0-image" style="display: <%= !options.showIcon ? 'none' : 'block' %>">
            <img src="<%= options.icon || '' %>">
        </div>
        <h1><%= i18n.t('signin:title') %></h1>
        <h2 class="a0-error" style="display: none">&nbsp;</h2>
        <h2 class="a0-success" style="display: none">&nbsp;</h2>
        <a class="a0-close" style="display: <%= options.standalone ? 'none' : 'block' %>;">
            <svg viewBox="0 0 56 56" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:sketch="http://www.bohemiancoding.com/sketch/ns">
                <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" sketch:type="MSPage">
                    <g id="interface_-_cross_cancel_1_" sketch:type="MSLayerGroup" fill="#3C4042">
                        <path d="M30.782,27.996 L55.441,3.336 C56.21,2.57 56.21,1.324 55.441,0.555 C54.672,-0.214 53.426,-0.215 52.658,0.555 L28,25.213 L3.342,0.555 C2.573,-0.215 1.327,-0.215 0.559,0.555 C-0.209,1.325 -0.21,2.571 0.559,3.336 L25.218,27.996 L0.559,52.654 C-0.21,53.422 -0.21,54.668 0.559,55.437 C1.328,56.206 2.574,56.207 3.342,55.437 L28,30.778 L52.658,55.437 C53.427,56.207 54.673,56.207 55.441,55.437 C56.209,54.667 56.21,53.421 55.441,52.654 L30.782,27.996 L30.782,27.996 Z" id="Shape" sketch:type="MSShapeGroup"></path>
                    </g>
                </g>
            </svg>
        </a>
    </div>
    <% } %>

    <div class="a0-loading a0-mode">
        <% if (locals.alt_spinner) { %>
        <div class="a0-spin-img" style="background-image: url('<%= locals.alt_spinner %>')"></div>
        <% } else { %>
        <div class="a0-spin-container">
            <div class="a0-spinner-css">
              <span class="a0-side a0-sp_left">
                <span class="a0-fill"></span>
              </span>
              <span class="a0-side a0-sp_right">
                <span class="a0-fill"></span>
              </span>
            </div>
            <div class="a0-spin-message">
                <span>&nbsp;</span>
            </div>
        </div>
        <% } %>
    </div>


    <% include modes/loggedin %>
    <% include modes/signin %>
    <% include modes/signup %>
    <% include modes/reset %>

    <div class='a0-footer'>

        <a href="http://auth0.com" target="_new" class="a0-logo">

